[user]
  name = Mark Ducommun
  email = mark@giveforward.com
[github]
  user = MarkDucommun
[core]
  autocrlf = input
  safecrlf = true
  editor = subl -n -w
[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  pr = pull --rebase
  amend = commit --amend
  initialize = !git init && commit --allow-empty -m 'initial commit'
  hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
[color]
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan